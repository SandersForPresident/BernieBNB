.sign-in
  %p.lead.text-center.bump
    %img.img-logo{src: image_url('bernie-bnb-logo.png')}

  %section.instructions
    %p.lead.text-center How Home Sharing Works
    %table.bump
      %tr
        %td
          %span.big-number 1
        %td Fill out a quick user profile using your Facebook or Google login.
      %tr
        %td
          %span.big-number 2
        %td Create a travel request or hosting offer.

      %tr
        %td
          %span.big-number 3
        %td Travelers send their contact info and trip details to nearby hosts.
      %tr
        %td
          %span.big-number 4
        %td Hosts confirm by phone or email.
  %hr.bump

  %section.sign-up.bump
    %p.lead.text-center Sign In Using...
    = link_to "Facebook", "/auth/facebook", {class: 'bump btn btn-success btn-block btn-lg'}
    = link_to "Google", "/auth/google_oauth2", {class: 'btn btn-danger btn-block btn-lg'}
